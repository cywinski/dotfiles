{
    "cSpell.enabled": true,
    "cSpell.enabledLanguageIds": [
        "markdown"
    ],
    "workbench.panel.defaultLocation": "right",
    "workbench.iconTheme":"material-icon-theme",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
        "*.wav": "default",
        "*.png": "imagePreview.previewEditor",
        "*.jpg": "imagePreview.previewEditor",
        "*.JPEG": "imagePreview.previewEditor"
    },
    "editor.suggestSelection": "first",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    "ruff.enable": true,
    "ruff.organizeImports": true,
    "ruff.fixAll": true,
    "claudeCode.useTerminal": true,
    "remote.SSH.remotePlatform": {
        "titan4.ii.pw.edu.pl": "linux",
        "athena.cyfronet.pl": "linux",
        "sprint1": "linux",
        "athena": "linux",
        "helios": "linux",
        "h84": "linux",
        "h85": "linux",
        "h82": "linux"
    },
    "notebook.formatOnSave.enabled": true,
    "notebook.codeActionsOnSave": {
        "notebook.source.fixAll": "explicit",
        "notebook.source.organizeImports": "explicit"
    },
    "notebook.formatOnCellExecution": true,
    "notebook.output.scrolling": true,
    "notebook.output.wordWrap": true,
    "notebook.stickyScroll.enabled": true,
    "notebook.lineNumbers": "on",
    "notebook.diff.overviewRuler": true,
    "diffEditor.experimental.showMoves": true,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "notebook.scrolling.revealNextCellOnExecute": "fullCell",
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "editor.formatOnPaste": true,
    "workbench.colorTheme": "One Dark Pro Mix",
    "editor.fontSize": 15,
    "terminal.integrated.fontSize": 14,
    "markdown.preview.fontSize": 13,
    "debug.console.fontSize": 13,
    "window.zoomLevel": 0,
    "gitlens.views.branches.branches.layout": "list",
    "terminal.integrated.stickyScroll.enabled": true,
    "editor.stickyScroll.enabled": true,
    "multiDiffEditor.experimental.enabled": true,
    "git.confirmSync": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "line",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 15,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.wordWrap": "on",
    "explorer.autoReveal": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "onFocusChange",
    "files.defaultLanguage": "python",
    "files.insertFinalNewline": true,
    "files.simpleDialog.enable": true,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "jupyter.askForKernelRestart": false,
    "jupyter.debugJustMyCode": false,
    "workbench.tree.indent": 20,
    "jupyter.interactiveWindow.creationMode": "perFile",
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "jupyter.runStartupCommands": [
        "%load_ext autoreload",
        "%autoreload 2"
    ],
    "output.smartScroll.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.shellIntegration.enabled": true,
    "window.commandCenter": false,
    "workbench.editor.enablePreview": true,
    "workbench.editor.wrapTabs": false,
    "remote.extensionKind": {
        "alefragnani.project-manager": [
            "workspace"
        ],
        "GitHub.copilot": [
            "ui"
        ],
        "WakaTime.vscode-wakatime": [
            "ui"
        ]
    },
    "workbench.colorCustomizations": {},
    "terminal.integrated.inheritEnv": false,
    "interactiveWindow.executeWithShiftEnter": true,
    "security.promptForRemoteFileProtocolHandling": false,
    "workbench.editorLargeFileConfirmation": 50,
    "editor.formatOnSaveMode": "modifications",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        },
        "tmux-shell": {
            "path": "tmux",
            "args": [
                "new-session",
                "-A",
                "-s",
                "vscode:${workspaceFolder}"
            ]
        }
    },
    "terminal.integrated.defaultProfile.linux": "bash",
    "cSpell.userWords": [
        "autocast",
        "bcywinski",
        "checkpointing",
        "dataroot",
        "ddim",
        "DDPM",
        "idxs",
        "interpretability",
        "mypy",
        "pretrained",
        "sokoban",
        "subgoal",
        "tfidf",
        "timestep",
        "timesteps",
        "unet",
        "xformers",
        "xstart"
    ],
    "cursor.cpp.disabledLanguages": [
        "plaintext",
        "scminput",
        "latex"
    ],
    "gitlens.advanced.messages": {
        "suppressLineUncommittedWarning": true
    },
    "explorer.confirmPasteNative": false,
    "cursor.composer.shouldChimeAfterChatFinishes": true,
    "cursor.cpp.enablePartialAccepts": true,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "remote.SSH.defaultExtensions": [
        "eamodio.gitlens",
        "visualstudioexptteam",
        "ms-toolsai.jupyter",
        "yzhang.markdown-all-in-one",
        "mutantdino.resourc",
        "ms-python.python",
        "anthropic.claude-code",
        "charliermarsh.ruff",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "mechatroner.rainbow-csv",
        "visualstudioexptteam"
    ],
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "/Library/TeX/texbin/latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-pdflatex=/Library/TeX/texbin/pdflatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {
                "PATH": "/Library/TeX/texbin:/usr/bin:/bin"
            }
        },
        {
            "name": "pdflatex",
            "command": "/Library/TeX/texbin/pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        }
    ],
    "git.enableSmartCommit": true,
}
